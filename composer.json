{
  "name": "postmark-newsletter/postmarknewsletter",
  "type": "prestashop-module",
  "version": "1.0.0",
  "description": "Professional newsletter module for PrestaShop 8 with Postmark integration",
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/prestashop-postmark-newsletter",
  "require": {
    "php": ">=7.2.5"
